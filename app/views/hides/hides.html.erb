<h1>Listing Hides</h1>

<table>
  <thead>
    <tr>
      <th>Comment Id</th>
      <th>User</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @hides.each do |hide| %>
      <tr>
        <td><%= hide.comment_id %></td>
        <td><%= hide.user.try(:email) %></td>
        <td><%= link_to 'Unhide', hide, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>