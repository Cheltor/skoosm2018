<p class="media-heading"><%= comment.content %></p>
<h6 class="pull-right text-muted"><%= time_ago_in_words(comment.created_at) + " ago" %></h6>

<h6 class="text-muted"><%= comment.user.try(:email) %></h6>

<div class="media-footer">
     <div class="btn-group" role="group" aria-label="Basic example">
     <%= link_to like_post_comment_path(@post, comment), :class => "btn btn-default", method: :put, class: "btn btn-info btn-sm" do %><i class="material-icons">thumb_up</i><% end %>
     <%= link_to dislike_post_comment_path(@post, comment), :class => "btn btn-default", method: :put, class: "btn btn-warning btn-sm" do %><i class="material-icons">thumb_down</i><% end %>
     </div>
     <%= link_to hide_post_comment_path(@post, comment), method: :post, class: "btn btn-danger btn-sm" do %><i class="material-icons">flag</i><% end %>
</div>
