<head>
  <script>
    $(document).ready(function() { $("#post_course_id").select2({theme: "bootstrap"}); });
  </script>
</head>

<div class="col-md-6 ml-auto mr-auto">
  <div class="card card-contact card-raised">
    <%= form_for(post) do |f| %>
      <div class="card-body">
        <% if post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      
            <ul>
            <% post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="">
            <div class="field">
            <%= f.label :course %><br />
            <%= f.collection_select :course_id, Course.all, :id, :name_with_univ, class: "form-control" %>
            </div>
            
              <div class="form-group">
                <div class="field">
                  <br>
                  <%= f.label :title %>
                  <%= f.text_field :title, class:"form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= f.label :url %>
                  <%= f.text_field :url, class:"form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= f.label :content %>
                  <%= f.text_area :content, class:"form-control" %>
                </div>
              </div>

        </div>

        


      

        <div class="actions">
				  <%= f.button :Submit, class: "btn btn-primary btn-round pull-right" %> 
        </div>
      </div>
    <% end %>
  </div>
</div>



