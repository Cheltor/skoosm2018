<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <%= hidden_field_tag 'plan', params[:plan] %>

  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">
       	<i class="material-icons">
        email
        </i>
      </span>
    </div>
    <%= f.email_field :email, autofocus: "off", class: 'form-control', placeholder:"School Email", autocomplete:"email" %>
  </div>
  
  
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">
       	<i class="material-icons">
        lock
        </i>
      </span>
    </div>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:"Password (6 characters minimum)" %>
  </div>
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">
       	<i class="material-icons">
        lock
        </i>
      </span>
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder:"Confirm Password" %>
  </div>
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">
       	<i class="material-icons">
        store
        </i>
      </span>
    </div>
    <%= f.text_field :name, class: 'form-control', placeholder:"Business Name" %>
  </div>
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">
       	<i class="material-icons">
        lock_open
        </i>
      </span>
    </div>
    <%= f.text_field :code, class: 'form-control', placeholder:"Reward Code (1234)" %>
  </div>
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">
       	<i class="material-icons">
        credit_card
        </i>
      </span>
    </div>
    <%= text_field_tag :card_number, nil, name: nil, class: "form-control", placeholder:"4242 4242 4242 4242" %>
  </div>
  <div class="actions form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-round btn-lg', id: 'form-submit-btn' %>
  </div>
<% end %>