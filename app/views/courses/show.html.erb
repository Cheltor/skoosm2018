<% @title= @course.name %>


  <body class="blog-post">
    <div class="wrapper">
      <div class="page-header header-filter page-header-mini" filter-color="black">
        <div class="page-header-image" data-parallax="false" style="background-image: url('../assets/img/bg24.jpg');">
        </div>
        <div class="content-center">
          <div class="row">
            <div class="col-md-8 ml-auto mr-auto text-center">
              <h2 class="title">
                <%= @course.name %>
              </h2>
              <h4>
                <%= @course.subject.name %>
              </h4>
            </div>
          </div>
        </div>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert alert-info", style: "text-align:center") %>
          <% end %>
            <div class="section">
              <div class="container">
                <div class="row">
                  <div class="col-md-8 ml-auto mr-auto">
                    <div class="card">
                      <div class="card-content">
                        <div class="container-fluid">
                          <h3 class="title" style="text-align:center">
                            <%= @course.name %> at
                              <%= @course.university.name %>
                          </h3>
                          <h4>
                            <div style="text-align:center">
                              <% if @enrolls.nil? %>
                                <% else %>
                                  <%= pluralize(Enroll.all.where(course_id: @course.id).count, 'User') %> following this course.
                                    <% end %>
                                      <% if user_signed_in? %>
                                        <div style="text-align:center">
                                          <% if @enrolls.blank? %>
                                            <%= button_to 'Follow', enroll_course_path(@course), method: :post, :class => 'btn btn-primary btn-round' %>
                                              <% else %>
                                                <%= link_to 'UnFollow at Dashboard', root_path, :class => 'btn btn-link btn-danger' %>
                                                  <% end %>
                                        </div>
                                        <% end %>
                            </div>
                          </h4>
                          <table class="table">
                              <thead class="text-primary">
                                <tr>
                                  <th style="text-align:center">Title</th>
                                  <th style="text-align:center">Post Points</th>
                                  <th style="text-align:center">Poster</th>
                                  <th>Helpful</th>
                                  <th>Unhelpful</th>
                                  <th>
                                    <%= sort_link @search, :created_at, "Created at" %>
                                  </th>


                                </tr>
                              </thead>
                              <tbody>
                                <% @posts.each do |post| %>
                                  <tr>
                                    <td><strong><%= link_to truncate(post.title, :length => 50), post %></strong></td>
                                    <% if post.user.blank? %>
                                      <td>N/A</td>
                                      <td>User Deleted</td>
                                      <td>N/A</td>
                                      <td>N/A</td>
                                      <% else %>
                                        <td>
                                          <%= post.weighted_score %>
                                        </td>
                                        <td>
                                          <%= post.user.email.slice(0, post.user.email.index('@')) %></td>
                                        <td class="td-actions">
                                          <%= link_to like_post_path(post), method: :put do %>
                                            <i class="material-icons">thumb_up</i>
                                            <% end %>
                                        </td>
                                        <td class="td-actions">
                                          <%= link_to dislike_post_path(post), method: :put do %>
                                            <i class="material-icons">thumb_down</i>
                                            <% end %>
                                        </td>
                                        <% end %>
                                          <td>
                                            <%= time_ago_in_words(post.created_at) + " ago" %>
                                          </td>
                                  </tr>
                                  <% end %>
                              </tbody>
                            </table>
                            </div>
                            </div>
                          <div class="row">
                            <div class="col mr-auto ml-auto">
                              <div class="apple_pagination">
                                <div class="page_info">
                                  <%= page_entries_info @posts %>
                                </div>
                                <%= will_paginate @posts, :container => false %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
    </div>
  </body>


  <%= render "layouts/footer"%>
