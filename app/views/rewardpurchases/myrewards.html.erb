<div class="container" style="text-align:center; padding-top:20px; padding-bottom:20px">
  <h1>My Rewards</h1>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th style="text-align: center">Name</th>
        <th style="text-align: center">Show</th>
      </tr>
    </thead>
    <tbody>
      <% @rewardpurchase.each do |rewardpurchase| %>
        <tr>
          <td style="text-align: center"><%= rewardpurchase.rewardname %></td>
          <td style="text-align: center"><%= link_to 'Show', rewardpurchase %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>