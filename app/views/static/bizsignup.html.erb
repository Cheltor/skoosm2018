<% @title="Business Sign Up" %>

	<div class="pricing-3 section-image" style="background-image: url('assets/img/pricing3.jpg')" id="pricing-3">
        <div class="container">
          <div class="row">
            <div class="col-md-6 ml-auto mr-auto text-center">
              <h2 class="title">Pick the best plan for you</h2>
              <h4 class="description">You have Unlimited Rewards on each package.</h4>
              <div class="section-space"></div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 ml-auto">
              <div class="card card-pricing">
                <div class="card-body">
                  <h5 class="category">Monthly</h5>
                  <h1 class="card-title">
                    <small>$</small>40
                    <small>/mo</small>
                  </h1>
	              <%= link_to 'Sign Up', new_business_registration_path(plan: @monthly_plan.id), class:"btn btn-primary btn-round" %>
                </div>
              </div>
            </div>
            <div class="col-md-4 mr-auto">
              <div class="card card-pricing card-raised" data-background-color="orange">
                <div class="card-body">
                  <h5 class="category">Annually</h5>
                  <h1 class="card-title">
                    <small>$</small>400
                    <small>/yr</small>
                  </h1>
	              <%= link_to 'Sign Up', new_business_registration_path(plan: @annually_plan.id), class:"btn btn-neutral btn-primary btn-round" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      </div>
     
     <%= render "layouts/footer" %>
